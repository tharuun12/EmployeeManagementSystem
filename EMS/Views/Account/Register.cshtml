@using EMS.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="register-container">
    <h2 class="register-title">Create Account</h2>

    <form asp-action="Register" method="post" class="register-form">
        <div asp-validation-summary="All" class="register-validation-summary"></div>

        <div class="register-group">
            <label class="register-label">Email</label>
            <input asp-for="Email" class="register-input" />
            <span asp-validation-for="Email" class="register-error"></span>
        </div>

        @* <div class="register-group">
            <label class="register-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="register-input" />
            <span asp-validation-for="PhoneNumber" class="register-error"></span>
        </div>

        <div class="register-group">
            <label class="register-label">Full Name</label>
            <input asp-for="FullName" class="register-input" />
            <span asp-validation-for="FullName" class="register-error"></span>
        </div> *@
        <input type="hidden" asp-for="PhoneNumber" class="register-input" />
        <input type="hidden" asp-for="FullName" class="register-input" />

        <div class="register-group">
            <label class="register-label">Password</label>
            <input asp-for="Password" type="password" class="register-input" />
            <span asp-validation-for="Password" class="register-error"></span>
        </div>

        <div class="register-group">
            <label class="register-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="register-input" />
            <span asp-validation-for="ConfirmPassword" class="register-error"></span>
        </div>

        <div class="register-actions">
            <button type="submit" class="register-button">Register</button>
        </div>
        <div class="login-remember-forgot1">
            <p >Already have an account? <a asp-action="Login" class="login-forgot-link1">Login</a></p>
        </div>
    </form>
</div>
