@model IEnumerable<Employee>

<div class="data-section">
    <h2 class="data-title">Employee Activity Tracker</h2>

    @if (Model != null && Model.Any())
    {
        <table class="data-table">
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.FullName</td>
                        <td>@emp.Email</td>
                        <td>
                            <a asp-action="LoginHistory" asp-route-userId="@emp.Email" class="btn btn-sm btn-primary">Login History</a>
                            @* <a asp-action="RecentActivity" asp-route-userId="@emp.Email" class="btn btn-sm btn-secondary">Recent Activity</a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="data-empty">
            No employee activity records available.
        </div>
    }
</div>
