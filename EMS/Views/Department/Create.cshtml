@model EMS.Models.Department
@{
    var managers = ViewData["Managers"] as List<EMS.Models.Employee>;
}

<div class="create-form">
    <h2 class="form-title">Create Department</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="DepartmentName" class="form-label"></label>
            <input asp-for="DepartmentName" class="form-control" />
            <span asp-validation-for="DepartmentName" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="ManagerId" class="form-label">Manager</label>
            <select asp-for="ManagerId" class="form-control">
                <option value="">-- Select Manager --</option>
                @foreach (var manager in managers!)
                {
                    <option value="@manager.EmployeeId">@manager.FullName</option>
                }
            </select>
            <span asp-validation-for="ManagerId" class="form-error"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>
