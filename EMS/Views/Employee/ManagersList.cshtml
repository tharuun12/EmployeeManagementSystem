@model IEnumerable<EMS.ViewModels.ManagerDetailsViewModel>

@{
    ViewData["Title"] = "Manager Details";
}

<div class="data-section">
    <h2 class="data-title">Manager Details</h2>

    @if (Model != null && Model.Any())
    {
        <table class="data-table">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Department</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var manager in Model)
                {
                    <tr>
                        <td>@manager.EmployeeId</td>
                        <td>@manager.FullName</td>
                        <td>@manager.Email</td>
                        <td>@manager.DepartmentName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="data-empty">No manager records available.</div>
    }
</div>
