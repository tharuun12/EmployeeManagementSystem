@model EMS.Models.LeaveRequest

<div class="leave-review-page">
    <h2 class="review-heading">Review Leave Request</h2>

    <div class="review-details">
        <p><strong>Employee:</strong> @Model.Employee?.FullName</p>
        <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
        <p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
        <p><strong>Reason:</strong> @Model.Reason</p>
    </div>

    <form asp-action="Approvals" method="post" class="review-form">
        <input type="hidden" asp-for="LeaveRequestId" />
        <div class="review-actions">
            <button type="submit" name="status" value="Approved" class="btn btn-outline-success approve-btn">Approve</button>
            <button type="submit" name="status" value="Rejected" class="btn btn-outline-danger reject-btn">Reject</button>
            <a asp-action="ApproveList" class="btn btn-outline-secondary cancel-btn">Cancel</a>
        </div>
    </form>
</div>
