@model EMS.Models.LeaveRequest

<div class="create-form">
    <h2 class="form-title">Review Leave Request</h2>

    <form asp-action="Approvals" method="post">
        <input type="hidden" asp-for="LeaveRequestId" />

        <div class="form-group">
            <label class="form-label">Employee</label>
            <div class="form-control-plaintext">@Model.Employee?.FullName</div>
        </div>

        <div class="form-group">
            <label class="form-label">Start Date</label>
            <div class="form-control-plaintext">@Model.StartDate.ToShortDateString()</div>
        </div>

        <div class="form-group">
            <label class="form-label">End Date</label>
            <div class="form-control-plaintext">@Model.EndDate.ToShortDateString()</div>
        </div>

        <div class="form-group">
            <label class="form-label">Reason</label>
            <div class="form-control-plaintext">@Model.Reason</div>
        </div>

        <div class="form-actions">
            <button type="submit" name="status" value="Approved" class="btn btn-success">Approve</button>
            <button type="submit" name="status" value="Rejected" class="btn btn-danger">Reject</button>
            <a asp-action="ApproveList" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
