@model IEnumerable<EMS.Models.LeaveRequest>

<div class="leave-approvals-page">
    <h2 class="approvals-heading">Pending Leave Approvals</h2>

    <table class="table table-bordered table-striped approvals-table">
        <thead class="table-header">
            <tr>
                <th>Employee</th>
                <th>Start</th>
                <th>End</th>
                <th>Reason</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var leave in Model)
            {
                <tr>
                    <td>@leave.Employee?.FullName</td>
                    <td>@leave.StartDate.ToShortDateString()</td>
                    <td>@leave.EndDate.ToShortDateString()</td>
                    <td>@leave.Reason</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm approval-review-btn"
                           asp-action="Approvals" asp-route-id="@leave.LeaveRequestId">
                            Review
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-warning no-approvals-alert">
            No pending leave requests to approve.
        </div>
    }
</div>
