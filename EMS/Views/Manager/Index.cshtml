@model EMS.ViewModels.EmployeeProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="employee-profile-container">
    <div class="employee-profile-card">
        <h2 class="profile-title">@Model.Employee.Role Profile</h2>

        <div class="profile-info">
            <div class="profile-row">
                <span class="label">Full Name:</span>
                <span class="value">@Model.Employee.FullName</span>
            </div>
            <div class="profile-row">
                <span class="label">Email:</span>
                <span class="value">@Model.Employee.Email</span>
            </div>
            <div class="profile-row">
                <span class="label">Phone:</span>
                <span class="value">@Model.Employee.PhoneNumber</span>
            </div>
            <div class="profile-row">
                <span class="label">Role:</span>
                <span class="value">@Model.Employee.Role</span>
            </div>
            <div class="profile-row">
                <span class="label">Department:</span>
                <span class="value">@Model.Employee.Department?.DepartmentName</span>
            </div>
            <div class="profile-row">
                <span class="label">Leave Balance:</span>
                <span class="value">@Model.Employee.LeaveBalance</span>
            </div>
            <div class="profile-row">
                <span class="label">Status:</span>
                <span class="value @(Model.Employee.IsActive ? "approved" : "rejected")">
                    @(Model.Employee.IsActive ? "Active" : "Inactive")
                </span>
            </div>
        </div>
    </div>
</div>
