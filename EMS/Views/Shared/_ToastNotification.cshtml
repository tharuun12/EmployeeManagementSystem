@if (TempData["ToastMessage"] != null)
{
    <script>
        window.onload = function () {
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right"
            };
            toastr.success("@TempData["ToastMessage"]"); // or .error(...)
        };
    </script>
}
